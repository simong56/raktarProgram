<Window x:Class="raktarProgram.StatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:raktarProgram"
        mc:Ignorable="d"
        Title="StatsWindow" Height="395" Width="282" ResizeMode="CanMinimize">
    <Grid>
        <Label Content="Eladások termékenként összesen" Margin="20,10,21,0" FontSize="16" Height="32" VerticalAlignment="Top"/>
        <DataGrid x:Name="StatsGrid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,54,0,0" IsReadOnly="True" Height="295" VerticalAlignment="Top"/>
        <Button x:Name="RefreshBtn" Content="Frissítés ↻" HorizontalAlignment="Center" Width="282" Click="RefreshBtn_Click" Height="30" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
