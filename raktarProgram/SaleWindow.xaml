<Window x:Class="raktarProgram.SaleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:raktarProgram"
        mc:Ignorable="d"
        Title="SaleWindow" Height="235" Width="332" ResizeMode="CanMinimize">
    <Grid>
        <ComboBox x:Name="ProductSelect" Margin="96,18,10,0" VerticalAlignment="Top"/>
        <Label Content="Termék" HorizontalAlignment="Left" Margin="10,16,0,0" VerticalAlignment="Top" Width="81"/>
        <DatePicker x:Name="SaleDatePicker" Margin="96,58,10,0" VerticalAlignment="Top"/>
        <Label Content="Termék" HorizontalAlignment="Left" Margin="10,16,0,0" VerticalAlignment="Top" Width="81"/>
        <Label Content="Dátum" HorizontalAlignment="Left" Margin="10,57,0,0" VerticalAlignment="Top" Width="81"/>
        <TextBox x:Name="AmountBox" Margin="96,96,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="22" FontSize="14" PreviewTextInput="AmountBox_PreviewTextInput"/>
        <Label Content="Mennyiség" HorizontalAlignment="Left" Margin="10,94,0,0" VerticalAlignment="Top" Width="81"/>
        <Button x:Name="SellBtn" Content="Eladás" Margin="10,138,10,10" Click="SellBtn_Click" />
    </Grid>
</Window>
