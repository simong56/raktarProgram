<Window x:Class="raktarProgram.ProductsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:raktarProgram"
        mc:Ignorable="d"
        Title="ProductsWindow" Height="414" Width="470">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <GroupBox Grid.Column="1" Header="Termék felvitele">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="123*"/>
                    <RowDefinition Height="53*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="92*"/>
                    <ColumnDefinition Width="131*"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="newProductIdBox" Margin="10,10,9,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="1" Height="18"/>
                <Label Content="Cikkszám" Margin="10,6,10,0" VerticalAlignment="Top" Height="26"/>
                <TextBox x:Name="newProductNameBox" Margin="10,41,9,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="1" Height="18"/>
                <Label Content="Terméknév" Margin="10,37,10,0" VerticalAlignment="Top" Height="26"/>
                <Button x:Name="addBtn" Content="Felvitel" Margin="10,10,10,10" Grid.Row="1" Grid.ColumnSpan="2" Click="addBtn_Click"/>
                <TextBox x:Name="newProductPriceBox" Margin="10,72,9,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="1" Height="18"/>
                <Label Content="Ár" Margin="10,68,10,0" VerticalAlignment="Top" Height="26"/>
            </Grid>

        </GroupBox>
        <GroupBox Grid.Column="1" Header="Termék törlése" Margin="0,199,0,0" Grid.RowSpan="2" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="123*"/>
                    <RowDefinition Height="53*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="92*"/>
                    <ColumnDefinition Width="131*"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="delProductIdBox" Margin="10,10,9,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="1" Height="18"/>
                <Label Content="Cikkszám" Margin="10,6,10,0" VerticalAlignment="Top" Height="26"/>
                <Button x:Name="deleteBtn" Content="Törlés" Margin="10,10,10,10" Grid.Row="1" Grid.ColumnSpan="2" Click="deleteBtn_Click"/>
            </Grid>
        </GroupBox>
        <DataGrid x:Name="productsGrid" IsReadOnly="True" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.RowSpan="2" Margin="0,0,0,32"/>
        <Grid Grid.Row="1" Height="32" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="logoutBtn" Grid.Column="0" Content="Kijelentkezés" Height="32" VerticalAlignment="Top" Click="logoutBtn_Click" RenderTransformOrigin="1.065,17.172" />
            <Button x:Name="saleWindowBtn" Grid.Column="1" Content="Eladás" Height="32" Click="saleWindowBtn_Click"/>
            <Button x:Name="statsWindowBtn" Grid.Column="2" Content="Statisztikák" Height="32" Click="statsWindowBtn_Click"/>
        </Grid>

    </Grid>
</Window>
